\DeclareOptionBeamer{headlinetitle}{\PassOptionsToPackage{headlinetitle}{beamerouterthemebremen}}
\DeclareOptionBeamer{nofootline}{\PassOptionsToPackage{nofootline}{beamerouterthemebremen}}
\DeclareOptionBeamer{footlineauthor}{\PassOptionsToPackage{footlineauthor}{beamerouterthemebremen}}
\DeclareOptionBeamer{footlinesection}{\PassOptionsToPackage{footlinesection}{beamerouterthemebremen}}
\DeclareOptionBeamer{footlinenumber}{\PassOptionsToPackage{footlinenumber}{beamerouterthemebremen}}
\DeclareOptionBeamer{navline}{\PassOptionsToPackage{navline=#1}{beamerouterthemebremen}}
% Optionen für das color theme
\DeclareOptionBeamer{bright}{\PassOptionsToPackage{bright}{beamercolorthemepigeon}}
