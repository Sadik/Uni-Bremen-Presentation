\mode<presentation>

\DeclareOptionBeamer{bright}{
  \definecolor{coolgray 1}{rgb}{0.90625,0.8828125,0.8359375}
  \definecolor{primary}{rgb}{0.95,0.94,0.92}
}
\DeclareOptionBeamer{dim}{
  \definecolor{coolgray 1}{rgb}{0.82421875,0.8046875,0.765625}
  \definecolor{primary}{rgb}{0.90625,0.8828125,0.8359375}
}
\DeclareOptionBeamer{dark}{
  \definecolor{coolgray 1}{rgb}{0.7265625,0.71484375,0.68359375}
  \definecolor{primary}{rgb}{0.82421875,0.8046875,0.765625}
}
\DeclareOptionBeamer{example}{
  \setbeamercolor{example text}{fg=green!50!black}
  \definecolor{coolgray 1}{rgb}{0.82421875,0.8046875,0.765625}
  \definecolor{primary}{rgb}{0.90625,0.8828125,0.8359375}
}
\DeclareOptionBeamer{noexample}{
  \setbeamercolor{example text}{fg=black}
}
\ExecuteOptionsBeamer{dim}
\ExecuteOptionsBeamer{noexample}
